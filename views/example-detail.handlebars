{{> nav/nav-block}}
{{!-- This is for viewing past entries --}}
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title text-center">{{format_date example.createdAt}}</h5>
    
          <ul id="detail-example-list" class="list-group">
          
            
            <li data-id="{{example.id}}" class="list-group-item">
                    <strong>Dream Name:</strong> 
                    <p contenteditable="true" id="editText">{{example.text}}</p> 
                    <strong>Description:</strong>
                    <p contenteditable="true" id="editDescription">{{example.description}}</p>

                      <label for="editEmoji"><strong>How you were feeling:</strong></label>
                      <select name="emoji" id="editEmoji">
                      <option selected>{{example.emoji}}</option>
                      <option value="😎">😎</option>
                      <option value="😄">😄</option>
                      <option value="🥰">🥰</option>
                      <option value="😐">😐</option>
                      <option value="😥">😥</option>
                      <option value="😡">😡</option>
                      <option value="💩">💩</option>
                      <option value="☠️">☠️</option>
                      </select>
                      <br><br>
                      
                  <br>
                    <button class="btn btn-dark editDream editbuttonspace">Save Edit</button>
            <a href="/example" class="btn btn-dark float-left">← Back To Journal</a>
            </li>
            
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>


<script src="/assets/js/example.js"></script>
