{{> nav/nav-block}}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="msg-margin text-center">{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">

          {{!-- Below is code for the dropdown --}}
            <div class="dropdown" style="float:right;">
              {{!-- <button class="dropbtn">How are you feeling?</button> --}}
              <label class="text-white" for="emoji">How are you feeling? <i class="fa-solid fa-plus"></i> </label>
              <select id="emoji" class="dropdown-content">
                <option value="">--Select Mood--</option>
                <option value="😎">😎</option>
                <option value="😄">😄</option>
                <option value="🥰">🥰</option>
                <option value="😐">😐</option>
                <option value="😥">😥</option>
                <option value="😡">😡</option>
                <option value="💩">💩</option>
                <option value="☠️">☠️</option>
              </select>
            </div>

          <div class="form-group">
            <label class="text-white" for="example-text" >Dream Title</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter your dream">
          </div>
          <div class="form-group">
            <label class="text-white" for="example-description">Dream Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter description, click Dream On to submit"></textarea>
          </div>
          <button id="submit" class="btn btn-dark float-right">Dream On &#129304</button>
        </form>
        <h4 class="text-center"> Past Journal Entries:</h4>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a class="pastjournalentrymarker" href="example/{{this.id}}">{{format_date this.createdAt}} {{this.text}} {{this.emoji}}</a>
            <button class="btn btn-dark float-right delete">X</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/example.js"></script>

